<div class="row">
  <div class="col s12 m6 offset-m3">
    <%= render 'shared/message_error' %>

    <%= form_for @user do |f| %>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <%= f.label :email %>
          <%= f.email_field :email %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <%= f.label :password_confirmation  %>
          <%= f.password_field :password_confirmation %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <%= f.submit "Create my account", class: "btn" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
